<div class="main_container">
  <h2>スケジュール詳細</h2>
  
  <table>
    <tr>
      <th>タイトル</th>
      <td><%= @user.title %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @user.start_day.strftime("%Y年%m月%d日") %></td>
    </tr>
    <tr>
      <th>投稿日時</th>
      <td><%= @user.end_day.strftime("%Y年%m月%d日") %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td>
        <% @end_check = @user.end_check %>
        <% if @end_check == true %>
          <% @end_check = "○" %>
          <%= @end_check %>
        <% else @end_check == false %>
          <% @end_check = "" %>
          <%= @end_check %>
        <% end %>
      </td>
    </tr>
    <tr>
    <th>スケジュールメモ</th>
    <td><pre><%= @user.memo %></pre></td>
  </tr>
  </table>

  <div>
    <ul>
      <li><%= link_to "スケジュール一覧に戻る", :users, class:"userList" %></li>
      <li><%= link_to "スケジュールを編集する", :edit_user, class:"userList"%></li>
      <li><%= link_to "スケジュールを削除", :user, method: :delete, data: { confirm: "本当に削除しますか？" },  class:"userList"%></li>
    </ul>
  </div>
</div>