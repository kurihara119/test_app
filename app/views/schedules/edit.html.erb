<div class="main_container">
  <h2>スケジュール編集</h2>
  
  <%= form_with model: @schedule do |f| %>
    <table>
      <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title, class:"scheduleForm" %></td>
      </tr>

      <tr>
        <th><%= f.label :start_day ,"開始日" %></th>
        <td><%= f.date_field :start_day, class:"scheduleForm" %></td>
      </tr>

      <tr>
        <th><%= f.label :end_day ,"終了日" %></th>
        <td><%= f.date_field :end_day, class:"scheduleForm" %></td>
      </tr>

      <tr>
        <th><%= f.label :end_check ,"終日" %></th>
        <td><%= f.check_box :end_check %><p class="end_text">終日の場合はチェックを入れます</p></td>
      </tr>

      <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo, class:"scheduleArea" %></td>
    </tr>
    </table>

    <div>
      <ul>
        <li><%= f.submit "スケジュールの編集を完了する"%></li>
        <li><%= link_to "スケジュール一覧に戻る", :schedules, class:"scheduleList" %></li>
      </ul>
    </div>
  <% end %>
</div>